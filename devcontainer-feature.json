{
    "name": "Tiny Go (no sudo)",
    "id": "tinygo",
    "version": "0.0.8",
    "description": "A feature to install tiny go (no sudo)",
    "options": {
        "version": {
            "type": "string",
            "default": "0.27,0",
            "description": "Specify a version of Tiny Go"
        }
    },
    "installsAfter": [
        "ghcr.io/devcontainers/features/rust",
        "cargo_binstall"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "tinygo.vscode-tinygo",
                "golang.go"
            ],
            "features": {
                "ghcr.io/devcontainers/features/go:1": {}
            }
        }
    }
}
